@{
    ViewData["Title"] = "Delete Application";
}

@model Movie

<h2>Confirm Deletion</h2>
<h3>Are you sure you want ot delete the record for @Model.Title (@Model.Year)?</h3>

<form method="Post" asp-action="Delete">
    <button type="submit">Delete</button>
    <a asp-controller="Home" asp-action="MovieList" class="btn btn-primary">Cancel</a>

    <input type="hidden" asp-for="MovieID" />
</form>
